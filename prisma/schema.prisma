generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String?
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                  String             @id @default(cuid())
  role                Role               @default(USER)
  email               String?            @unique
  username            String?            @unique
  firstname           String?
  lastname            String?
  name                String?
  password            String?
  emailVerified       DateTime?
  image               String?
  bio                 String?            @db.Text
  accounts            Account[]
  sessions            Session[]
  verificationCodes   VerificationCode[]
  points              Int                @default(0)
  pointTransactions   PointTransaction[]
  currentStreak       Int                @default(0)
  lastDailyRewardDate DateTime?
}

enum TransactionType {
  EARN
  SPEND
}

enum TransactionSource {
  CAMPAIGN
  DAILY_REWARD
  TASK_ACTION // if user create follow task or done a other users follow task
  COMPLETE_TASK // if the website makes a tasks and missions rewards etc
  PURCHASE
  ADMIN_ADJUST
  REFERRAL_BONUS
}

enum RewardType {
  POINTS
}

model RewardCampaign {
  id       String  @id @default(cuid())
  name     String  @unique // e.g. "NEW_USER_2024"
  isActive Boolean @default(true) // Emergency kill switch

  // --- Display Info ---
  title       String
  description String?

  // --- The "Ticket" System (Concurrency) ---
  claimedCount Int @default(0)
  maxLimit     Int @default(1000) // 0 = Unlimited

  // --- Reward Definition ---
  rewardAmount Int // e.g. 500
  rewardType   RewardType @default(POINTS) // POINTS, CASH (Coming soon), COUPON

  // --- Rules / Logic ---
  requiresNewUser   Boolean @default(false)
  maxAccountAgeDays Int? // e.g. 7 (User must have joined in last 7 days)

  startDate DateTime?
  endDate   DateTime?

  // Relation to track who claimed it
  claims PointTransaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PointTransaction {
  id               String            @id @default(cuid())
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId           String
  amount           Int
  type             TransactionType
  source           TransactionSource
  createdAt        DateTime          @default(now())
  rewardCampaign   RewardCampaign?   @relation(fields: [rewardCampaignId], references: [id])
  rewardCampaignId String?
}

model VerificationCode {
  id          String                  @id @default(cuid())
  reason      VerificationCodeReasons @default(EMAIL_VERIFICATION)
  code        Int
  codeExpires DateTime
  email       String
  user        User                    @relation(fields: [email], references: [email])
  createdAt   DateTime                @default(now())
}

enum VerificationCodeReasons {
  EMAIL_VERIFICATION
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
