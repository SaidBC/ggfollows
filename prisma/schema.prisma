generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Enums ---

enum Role {
  USER
  ADMIN
}

enum TransactionType {
  EARN
  SPEND
}

enum TransactionSource {
  CAMPAIGN
  DAILY_REWARD
  TASK_COMPLETION
  TASK_FUNDING
  PURCHASE
  ADMIN_ADJUST
  REFERRAL_BONUS
}

enum RewardType {
  POINTS
}

enum TaskPlatform {
  FACEBOOK
  INSTAGRAM
  YOUTUBE
  X
}

enum TaskCompletionStatus {
  PENDING // User submitted the completion proof
  VERIFIED // System/Admin confirmed the completion and rewarded points
  REJECTED // Completion proof was invalid
}

enum VerificationCodeReasons {
  EMAIL_VERIFICATION
}

// --- Authentication Models (Standard) ---

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String?
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model VerificationCode {
  id          String                  @id @default(cuid())
  reason      VerificationCodeReasons @default(EMAIL_VERIFICATION)
  code        Int
  codeExpires DateTime
  email       String
  user        User                    @relation(fields: [email], references: [email])
  createdAt   DateTime                @default(now())
}

// --- Core User Model ---

model User {
  id            String    @id @default(cuid())
  role          Role      @default(USER)
  email         String?   @unique
  username      String?   @unique
  firstname     String?
  lastname      String?
  name          String?
  password      String?
  emailVerified DateTime?
  image         String?
  bio           String?   @db.Text

  accounts          Account[]
  sessions          Session[]
  verificationCodes VerificationCode[]

  points            Int                @default(0)
  pointTransactions PointTransaction[]

  // Task relations
  createdTasks    Task[] // Tasks created by this user
  taskCompletions TaskCompletion[] // Tasks completed by this user

  currentStreak       Int       @default(0)
  lastDailyRewardDate DateTime?
}

// --- Points & Rewards ---

model RewardCampaign {
  id       String  @id @default(cuid())
  name     String  @unique
  isActive Boolean @default(true)

  title       String
  description String?

  claimedCount Int @default(0)
  maxLimit     Int @default(1000)

  rewardAmount Int
  rewardType   RewardType @default(POINTS)

  requiresNewUser   Boolean @default(false)
  maxAccountAgeDays Int?

  startDate DateTime?
  endDate   DateTime?

  claims PointTransaction[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PointTransaction {
  id     String            @id @default(cuid())
  user   User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String
  amount Int
  type   TransactionType
  source TransactionSource

  rewardCampaign   RewardCampaign? @relation(fields: [rewardCampaignId], references: [id])
  rewardCampaignId String?

  // NEW: Link to the specific completion event that triggered the reward
  taskCompletion   TaskCompletion? @relation(fields: [taskCompletionId], references: [id])
  taskCompletionId String?         @unique // Ensures one reward per verified completion

  createdAt DateTime @default(now())
}

// --- Task System ---

model Task {
  id String @id @default(cuid())

  title       String
  description String?
  link        String
  quantity    Int
  amount      Int
  platform    TaskPlatform

  creator User   @relation(fields: [userId], references: [id])
  userId  String

  completions TaskCompletion[]

  allowsMultiAccount Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TaskCompletion {
  id String @id @default(cuid())

  user   User   @relation(fields: [userId], references: [id])
  userId String

  task   Task   @relation(fields: [taskId], references: [id])
  taskId String

  completionProof String @db.Text

  status TaskCompletionStatus @default(PENDING)

  pointReward PointTransaction?

  createdAt DateTime @default(now())

  @@unique([userId, taskId, completionProof])
}
